<%- include('./partials/header') -%>
<nav class="navbar navbar-light bg-light">
    <div class="container-fluid" style="width: 400px;">
      <a class="navbar-brand" href="/" style="font-weight: bold;">귤귤이가♥ 하고싶은 PlanList</a>
    </div>
  </nav>
<div class="container img_box" style="position: relative;">
  <div class="img img1"><img src="./img/2.jpg" alt=""></div>
  <div class="img img2"><img src="./img/1.jpg" alt=""></div>
</div>
<div class="container" style="margin-top: 180px;">
    <form action="/add/todo" method="POST" class="" style="text-align: right;">
        <input type="text" name="todo" id="todo" class="form-control" placeholder="어떤계획이죠? 적어주세요!" required>

        <textarea class="form-control my-2" placeholder="자세한 계획을 적어주세요! " id="content" name="content" style="height: 100px" required></textarea>
  
        <input type="submit" value="Add Todo" class="btn  btn-info btn-primary mt-1">
    </form>
      <div class="list-group my-3">
        <% todo.forEach(todos => { %>
        <a href="javascript:void(0)" class="list-group-item list-group-item-action" aria-current="true" style="position: relative;">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= todos.todo %></h5>
            <small><%= todos.createAt.toLocaleDateString() %></small>
          </div>
          <p class="mb-1"><%= todos.content %></p>
          <!-- <small><%= todos._id %></small> -->
          <form action="/delete/<%= todos.id %>?_method=DELETE" method="POST" style="text-align: right;">
            <button type="submit" class="btn btn-info p-2 bg-danger" >
                <i class="material-icons" style="color:white">Delete</i>
            </button>
         </form>
        </a>
        <% }) %>
      </div>
</div>
    
<%- include('./partials/footer') -%>